{
  "testEnvironment": "node",
  "collectCoverageFrom": ["src/**/*.js", "!src/config/**", "!src/**/*.test.js"],
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "lcov", "html"],
  "testMatch": ["**/tests/**/*.test.js"],
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
  "verbose": true
}
